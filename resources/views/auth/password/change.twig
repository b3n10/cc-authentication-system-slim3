{% extends 'templates/app.twig' %}

{% block content %}
	<div class="div-signup">
		<span>Change Password</span>
		<div class="form-group">
			<form class="form-signup" action="{{ path_for('auth.password.change') }}" method="POST" autocomplete="off">
				<div class="form-group {{ errors.current_password ? 'has-errors' : '' }}">
					<label for="current_password">Current Password</label>
					<input id="current_password" type="password" name="current_password">
					{% if errors.current_password %}
						<span class="errors">{{ errors.current_password | first }}</span>
					{% endif %}
				</div>
				<div class="form-group {{ errors.password ? 'has-errors' : '' }}">
					<label for="password">Password</label>
					<input id="password" type="password" name="password">
					{% if errors.password %}
						<span class="errors">{{ errors.password | first }}</span>
					{% endif %}
				</div>
				<div class="form-group">
					<button type="submit">Change Password</button>
				</div>
				<div class="form-group">
					{{ csrf.fields | raw }}
				</div>
			</form>
		</div>
	</div>
{% endblock %}
