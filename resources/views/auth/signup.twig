{% extends 'templates/app.twig' %}

{% block content %}
	<div class="div-signup">
		<span>Sign Up</span>
		<div class="form-group">
			<form class="form-signup" action="{{ path_for('auth.signup') }}" method="POST" autocomplete="off">
				<div class="form-group {{ errors.name ? 'has-errors' : '' }}">
					<label for="name">Name</label>
					<input id="name" type="text" name="name" value="{{ inputs.name }}">
					{% if errors.name %}
						<span class="errors">{{ errors.name | first }}</span>
					{% endif %}
				</div>
				<div class="form-group {{ errors.email ? 'has-errors' : '' }}">
					<label for="email">E-mail</label>
					<input id="email" type="email" name="email" placeholder="email@domain.com" value="{{ inputs.email }}">
					{% if errors.email %}
						<span class="errors">{{ errors.email | first }}</span>
					{% endif %}
				</div>
				<div class="form-group {{ errors.password ? 'has-errors' : '' }}">
					<label for="password">Password</label>
					<input id="password" type="password" name="password">
					{% if errors.password %}
						<span class="errors">{{ errors.password | first }}</span>
					{% endif %}
					{{ csrf.fields | raw }}
				</div>
				<div class="form-group">
					<button type="submit">Submit</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
